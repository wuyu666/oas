<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.chinasofti.oas.mapper.INoticeMapper">
  	<resultMap id="noticeResults" type="notice" >
  		<id column="nid" property="nid"/>
  		<result column="nrange" property="nrange"/>
  		<result column="ntheme" property="ntheme"/>
  		<result column="ncontent" property="ncontent"/>
  		<result column="ntime" property="ntime"/>
  	</resultMap>
  	<select id="queryNotice" parameterType="java.util.Map" resultMap="noticeResults">
  		select * from t_notice
  		<include refid="no1" />
  		<if test="start !=null and size !=null">
            limit #{start},#{size}
        </if>
  	</select>
  	<sql id="no1">
  		<where>
  			<if test="nrange !=null and nrange != '' ">
  				nrange=#{nrange}
  			</if>
  		</where>
  	</sql>
  	<select id="queryCount" parameterType="java.util.Map" resultType="long">
  		select count(*) from t_notice
  		<include refid="no1" />
  	</select>
  	<!-- 公告添加 -->
    <insert id="add" parameterType="notice">
        insert into t_notice (nrange,ntheme,ncontent,ntime) values(#{nrange},#{ntheme},#{ncontent},now())
    </insert>
    
    <!-- 公告修改 -->
    <update id="update" parameterType="notice">
        update t_notice
        <set>
            <if test="nrange != null and nrange != ''">nrange = #{nrange},</if>
            <if test="ntheme != null and ntheme != ''">ntheme = #{ntheme},</if>
            <if test="ncontent != null and ncontent != ''">ncontent = #{ncontent},</if>
            <if test="ntime != null and ntime != ''">ntime = now(),</if>
        </set>
        where nid = #{nid}
    </update>
    
    <!-- 公告删除 -->
    <delete id="delete" parameterType="Integer">
        delete from t_notice where nid = #{nid}
    </delete>	
  	
  </mapper>